#include "holberton.h"

/**
 *main: entry point
 *description: print $sign
 *return: the number of signs
 */

void print_diagonal(int n)
{

	int i, j, k;
	if (n <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 0; i <= n; i++)
		{
			for (j = 0; j <= i; j++)
			{
				_putchar(' ');
			}
			_putchar('$');
			_putchar('\n');
		}
	}
}
